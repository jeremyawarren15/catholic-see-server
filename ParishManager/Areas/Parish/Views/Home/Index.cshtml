@model IEnumerable<ParishManager.Areas.Parish.Models.Home.ParishListItemViewModel>

@{
    ViewData["Title"] = "All Parishes";
}

<h1>All Parishes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParishName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParishName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ParishId }) |
                @Html.ActionLink("Index", "TimeSlots", "TimeSlot", new { id = item.ParishId }) |
            </td>
        </tr>
}
    </tbody>
</table>
